{
    "name": "components/foundation",
    "description": "The most advanced responsive front-end framework in the world.",
    "type": "component",
    "keywords": [
        "foundation",
        "css"
    ],
    "homepage": "http://foundation.zurb.com/",
    "license": "MIT",
    "authors": [
        {
            "name": "ZURB, Inc."
        }
    ],
    "require": {
        "components/modernizr": "*",
        "components/jquery": "*",
        "components/normalize.css": "*"
    },
    "suggest": {
        "components/zepto": "A much lighter substitute for jQuery."
    },
    "extra": {
        "component": {
            "scripts": [
                "js/foundation.min.js"
            ],
            "styles": [
                "css/foundation.min.css"
            ],
            "files": [
                "js/**",
                "css/*"
            ],
            "shim": {
                "exports": "window.Foundation",
                "deps": ["jquery", "modernizr"]
            }
        }
    }
}
